<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    tools:context="tech.shloknangia.www.dtuconnect.ViewUpdateActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25dp"
            android:textColor="#ff122cff" />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt1"
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/name"
            android:textColor="#ff122cff" />
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt2"
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/email"
            android:textColor="#ff122cff" />
        <TextView
            android:id="@+id/bloodgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt3"
            android:textColor="#ff000000" />
        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:text="Branch"
            android:layout_below="@+id/bloodgroup"
            android:textColor="#ff122cff" />
        <TextView
            android:id="@+id/branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt4"
            android:textColor="#ff000000" />
        <TextView
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Course"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/branch"
            android:textColor="#ff122cff" />
        <TextView
            android:id="@+id/course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt5"
            android:textColor="#ff000000" />
        <TextView
            android:id="@+id/txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Year"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/course"
            android:textColor="#ff122cff" />
        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt6"
            android:textColor="#ff000000" />


        <TextView
            android:id="@+id/txt7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Contact No."
            android:layout_marginTop="15dp"
            android:layout_below="@+id/year"
            android:textColor="#ff122cff" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt7"
            android:textColor="#ff000000" />
        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Update Your Info"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:layout_below="@+id/phone"
            android:textColor="@color/colorAccent"
            android:background="@drawable/custombutton2"

            />
        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Log Out"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:layout_below="@+id/update"
            android:textColor="@color/colorAccent"
            android:background="@drawable/custombutton2"

            />

    </RelativeLayout>
</ScrollView>



